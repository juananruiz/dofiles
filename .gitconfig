[core]
	autocrlf = input
  editor = vi
  autocrlf = input

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[web]
  browser = google-chrome

[credential]
  helper = osxkeychain

[alias]
  c = commit
  ca = commit -a
  cm = commit -m
  cam = commit -am
  d = diff
  dc = diff --cached
  l = log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit
